<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Archivarius">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/Views/Styles/MainWindowStyles.axaml"/>
	</Window.Styles>

	<Border Classes="Wrapper">
		<StackPanel>
			<Grid Classes="CurrentPathContainer">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.85*"/>
					<ColumnDefinition Width="0.15*"/>
				</Grid.ColumnDefinitions>

				<TextBox Grid.Column="0" Watermark="File or directory path"/>
				
				<Border Grid.Column="1" Classes="DirectoryUpButtonContainer">
					<!--add icon-->
					<Button Classes="CustomButton">Up</Button>
				</Border>
			</Grid>
			<Grid Classes="MainControlsContainer">
				<Grid.RowDefinitions>
					<RowDefinition Height="70" />
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.85*" />
					<ColumnDefinition Width="0.15*" />
				</Grid.ColumnDefinitions>

				<Grid Grid.Column="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="0.22*"/>
						<ColumnDefinition Width="0.04*"/>
						<ColumnDefinition Width="0.22*"/>
						<ColumnDefinition Width="0.04*"/>
						<ColumnDefinition Width="0.22*"/>
						<ColumnDefinition Width="0.04*"/>
						<ColumnDefinition Width="0.22*"/>
					</Grid.ColumnDefinitions>

					<Button Grid.Column="0" Classes="CustomButton">Extract</Button>
					<Button Grid.Column="2" Classes="CustomButton">Archive</Button>
					<Button Grid.Column="4" Classes="CustomButton">Add to</Button>
					<Button Grid.Column="6" Classes="CustomButton">View</Button>
				</Grid>
			</Grid>
		</StackPanel>
	</Border>
</Window>
